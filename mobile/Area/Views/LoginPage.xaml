            <StackLayout.Padding>
                <OnIdiom x:TypeArguments="Thickness">
                    <OnIdiom.Phone>140, 0, 140, 0</OnIdiom.Phone>
                </OnIdiom>
            </StackLayout.Padding>
            <Label x:Name="Label_Mail" Text="Email" />
            <Entry x:Name="Entry_Mail" Placeholder="Email"/>
            <Label x:Name="Label_Password" Text="Password" />
            <Entry x:Name="Entry_Password" Placeholder="Password" IsPassword="True"/>
